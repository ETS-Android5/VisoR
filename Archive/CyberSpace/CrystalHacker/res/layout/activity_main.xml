<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:baselineAligned="false"
    android:padding="20dp"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.visor.ui.AllFilterButton
            android:id="@+id/allFilters"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0.74"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descFiltr"
            android:scaleType="fitCenter"
            android:src="@drawable/greenselectlow" />
        
        <com.visor.ui.FavFilterButton
            android:id="@+id/favFilters"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0.74"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descFiltr"
            android:scaleType="fitCenter"
            android:src="@drawable/heartlow" />

        <com.visor.ui.ScreenModeButton
            android:id="@+id/screenModeId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0.74"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descView"
            android:scaleType="fitCenter"
            android:src="@drawable/halflow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >
        <com.visor.ui.VisorButton
            android:id="@+id/visorIm"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descMain"
            android:scaleType="fitCenter"
            android:src="@drawable/visor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
        <com.visor.ui.HelpButton
            android:id="@+id/helpIm"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/help2low" />
    </LinearLayout>

</LinearLayout>